#!/bin/bash

# Exit On Error
set -o errexit
# Fail On Pipe Failure
set -o pipefail
# Fail On Undefined Variables
set -o nounset

# Start Celery Flower With Authentication
exec python -m watchfiles "celery -A config.celery_app flower --loglevel=info --basic_auth=${CELERY_FLOWER_USER}:${CELERY_FLOWER_PASSWORD}"
